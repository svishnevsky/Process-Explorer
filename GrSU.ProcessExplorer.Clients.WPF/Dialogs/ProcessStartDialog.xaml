<Window x:Class="GrSU.ProcessExplorer.Clients.WPF.Dialogs.ProcessStartDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:metro="http://schemas.codeplex.com/elysium"
        DataContext="{Binding Source={StaticResource Locator}, Path=ProcessStartDialog}"
        Title="New process was started" Height="200" Width="450">
    <Grid Margin="10">
        <Grid.ColumnDefinitions></Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        
        <TextBlock Name="TxtBlockMessage" Grid.Column="0" Grid.Row="0" TextAlignment="Left" TextWrapping="Wrap" FontSize="18">
            Process "dsfdsf" was started. Please choose action (if you didn't start this process click "Terminate").
        </TextBlock>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Column="0" Grid.Row="1">
            <Button Margin="5" Width="120" FontSize="18">Keep running</Button>
            <Button Margin="5" Width="120" FontSize="18">Terminate</Button>
        </StackPanel>
    </Grid>
</Window>
